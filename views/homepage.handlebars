<ol class="post-list">
    {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}}peanuts)</span>
      </div>
      <div class="meta">
         {{posts.user.username}} on
        {{post.created_at}}
    
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>